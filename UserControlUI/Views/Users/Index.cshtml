@model IEnumerable<UserControlUI.ModelsDTO.UserDTO>

<div class="container" p-3>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">User List</h2>
        </div>
        <div class="col-6">
            Create new user
        </div>
    </div>

    <br /><br />
    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        LastName
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="10%"> @obj.Id </td>
                    <td width="40%"> @obj.FirstName </td>
                    <td width="30%"> @obj.LastName </td>
                    <td> </td>
                </tr>
                }
            </tbody>
        </table>
     }
     else
     {
        <p>No users exist</p>
     }
</div>