@model IEnumerable<UserControlUI.ModelsDTO.DocumentDTO>

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Document</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().UploadedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().UploadedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().UpdatedByUserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().UpdatedByUserName)
        </dd>
        <dd>
            @Html.ActionLink("Download", "Download", new { id = Model.First().Id })
        </dd>
    </dl>
</div>



@if (Model.Count() > 1)
{
    <text>---------------------------------------------------------------------------------</text>
    <h5>Old Versions</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().UploadedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().UpdatedByUserName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in Model)
            {
                if (doc.Id != Model.First().Id)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => doc.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => doc.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => doc.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => doc.UploadedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => doc.UpdatedByUserName)
                        </td>
                        <td>
                            @Html.ActionLink("Download", "Download", new { id = doc.Id })
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
